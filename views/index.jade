extends layout

block content
  div#banner(style='background-image:url(/banner.png)')
    h1.headline Acandog
    div.teaser  !{siteSetup.teaser}

  ul.promoted.dogs
    each entry in entries.slice(0,3)
      li
        a(href='/dogs/' + entry.urlTitle)
          img(src='/dog-image-326x360.png', alt='dog pic')
          span.name= entry.title

  ul.dogs
    each entry in entries.slice(3)
      li
        a(href='/dogs/' + entry.urlTitle)
          img(src='/dog-image-240x240.png', alt='dog pic')
          span.name= entry.title

